@model IEnumerable<EntityLayer.Concrete.Comment>

<div class="comment-top">
	<h4>Yorumlar</h4>
	

	@if (Model.Count()==0)
	{
		<h3>Bu Bloğa daha önce hiç yorum yapılmamış =(</h3>
		<p>İlk yorumu sen yap!</p>
	}
	
		@foreach (var item in Model)
		{
			<div class="media">
			<img src="~/CoreBlogTheeme/images/t1.jpg" alt="" class="img-fluid" />
		<div class="media-body">
			<h5 class="mt-0">@item.CommentUserName</h5>
			<p>
				@item.CommentContent
			</p>

		</div>
		</div>
		}
		
	
</div>